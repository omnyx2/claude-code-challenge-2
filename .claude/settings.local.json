{
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(npm config:*)",
      "Bash(npm install:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git remote add:*)",
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/lyuhyeonseog/Dev/ClaudeCoding/study4/hooks-challenge/hooks/read_hook.js"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/lyuhyeonseog/Dev/ClaudeCoding/study4/hooks-challenge/hooks/query_hook.js",
            "timeout": 300
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_response.filePath // .tool_input.file_path // empty' | xargs -I {} npx --yes prettier --write {} 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "node /Users/lyuhyeonseog/Dev/ClaudeCoding/study4/hooks-challenge/hooks/tsc.js"
          },
          {
            "type": "command",
            "command": "node /Users/lyuhyeonseog/Dev/ClaudeCoding/study4/hooks-challenge/hooks/log_hook.js"
          }
        ]
      }
    ]
  }
}
